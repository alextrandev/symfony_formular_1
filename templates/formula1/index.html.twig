{% extends 'base.html.twig' %}

{% block title %}
	Formula 1 races in 2024
{% endblock %}

{% block body %}

	<main class="wrapper">
		<h1>F1 races in 2024</h1>
		<div class="container">
			{% for race in data.MRData.RaceTable.Races %}
				<div class="card">
					<div class="title">
						<h2>{{ race.raceName }}</h2>
						<p>Round:
							{{ race.round }}
						</p>
					</div>
					<div class="race_info">
						<p>
							Date:
							{{ race.date }}
						</p>
						<p>
							Time:
							{{ race.time }}
						</p>
						<p>
							More infos:
							<a href="{{ race.url }}">Link</a>
						</p>
					</div>
					<div class="track_info">
						<p>
							Name:
							{{ race.Circuit.circuitName }}
						</p>
						<p>Location:
							{{ race.Circuit.Location.locality }},
							{{ race.Circuit.Location.country }}</p>
						<p>More infos:
							<a href="{{ race.Circuit.url }}">Link</a>
						</p>

					</div>
				</div>
			{% endfor %}
		</div>
	</main>
{% endblock %}
